{% extends "index.twig" %}
{% block content %}
    <div class="line">
        <div class="box margin-bottom news-box">
            <div class="margin">
                <!-- CONTENT -->
                <article class="s-12 l-12">
                    <div class="s-12 l-12 margin-bottom">
                        <h1>{{ item.topic }}</h1>
                        <span class="submitted">เมื่อวันที่ {{ item.post_date }} โดย {{ item.posted }}, อ่านแล้ว {{ item.pageview }}</span>
                    </div>
                    <img class="thumbnail s-12 l-3" src="{{ base_url }}{{ item.thumb }}"><p>{{ item.detail | raw }}</p>
                    {% if (item.gallery > 0) %}
                        <hr>
                        <div class="margin">
                        {% for picture in item.pictures %}
                            <div class="s-12 l-4 margin-bottom">
                                <a class="gallery-item" href="{{ base_url }}{{ picture.path }}">
                                    <img src="{{ base_url }}{{ picture.path }}">
                                </a>
                            </div>
                        {% endfor %}
                        </div>
                        
                        {{ include('libs/colorbox.twig') }}
                        <script type="text/javascript">
                            $(function(){
                                if($('a.gallery-item').length > 0){
                                    $("a.gallery-item").colorbox({
                                        rel:'gallery-lists',
                                        transition:"fade",
                                        slideshow:true,
                                        slideshowAuto:false,
                                        slideshowStart:"Start Slideshow | ",
                                        slideshowStop:"Stop Slideshow | "
                                    });
                                }
                            });
                        </script>
                    {% endif %}
                </article>
            </div>
        </div>
    </div>
{% endblock %}